<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ani.liga.Detail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgstrTeamLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_below="@+id/imgstrTeamLogo"
        android:layout_height="wrap_content"
        android:orientation="vertical">

                <TextView
                    android:layout_toRightOf="@id/imgstrTeamLogo"
                    android:layout_toEndOf="@id/imgstrTeamLogo"
                    android:id="@+id/tvintFormedYear"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Year "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idLeague"
                    android:text="Id"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/strLeague"
                    android:text="League"
                    />




    </LinearLayout>
    </RelativeLayout>

</LinearLayout>